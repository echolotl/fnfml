{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Friday Night Funkin' Mod Loader",
  "version": "0.1.0",
  "identifier": "com.echolotl.fnfml",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Friday Night Funkin' Mod Loader",
        "width": 800,
        "minWidth": 800,
        "height": 600,
        "minHeight": 450,
        "windowEffects": {
          "effects": [
            "mica"
          ]
        },
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
