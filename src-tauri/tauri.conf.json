{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Fridaylight",
  "version": "0.7.0",
  "identifier": "com.echolotl.fridaylight",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Fridaylight",
        "width": 800,
        "minWidth": 800,
        "height": 600,
        "minHeight": 450,
        "windowEffects": {
          "effects": [
            "mica"
          ]
        },
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["flmod"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNGQUQ5NzJDMTRCRjY2MUUKUldRZVpyOFVMSmV0UDJtR1E0ZG9abWo2Nm5SdDJZSXI5bjdwdHR5WWtJVXJqdjlFOXlhQVEzZWcK",
      "endpoints": [
        "https://github.com/echolotl/fridaylight/releases/latest/download/latest.json"
      ]
    }

  }
}
